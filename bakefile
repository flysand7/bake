
let options = {
    debug = false,
    build_mode = 'exe',
}


options.debug = true

let isd = options.debug
print("Is debug: ${isd}\n")

# Recipe for building C files
func compile(input, output) {
    bake-recipe(
        [
            ['clang.exe', input, '-o', output],
        ],
        [input],
        [output],
    )
}

func 'cli' build(exe-name) {
    # Create the recipe
    compile('testing/print-args.c', exe-name)

    # Build and run
    bake-build([exe-name])
    cmd(exe-name, 1, 2, 3)
}

