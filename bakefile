
let options = {
    debug = false,
    build_mode = 'exe',
}


options.debug = true

let isd = options.debug
print("Is debug: ${isd}\n")

# Recipe for building C files
func build(input, output) {
    bake-recipe(
        [
            ['clang.exe', input, '-o', output],
        ],
        [input],
        [output],
    )
}

# Create the recipe
build('testing/print-args.c', 'a.exe')

# Build and run
bake-build(['a.exe'])
cmd('a.exe', 1, 2, 3)

